<!-- Page Content -->
<div class="container">

	<!-- Jumbotron Header -->
	<header class="jumbotron hero-spacer">
		<h1>Current Cart</h1>
		<p>View of your cart</p>
	</p>
</header>

<hr>

<!-- Title -->
<div class="row">
	<div class="col-lg-12">
		<h3>Cart is good to go</h3>
	</div>
</div>
<!-- /.row -->
<!-- Page Features -->
<div class="row text-center">
	<% total = 0 %>
	<% @order.each do |f| %>
	<div class="col-md-3 col-sm-6 hero-feature">
		<div class="thumbnail">
			<%= image_tag f.product.avatar.url(:medium) %>
			<div class="caption">
				<h3><%= f.product.name %></h3>
				<p>Price: <%= f.product.price %></p>
				<% total += f.product.price.to_i %>
				<p><%= link_to 'Remove item', [f.product.sub_category.category,f.product.sub_category,f.product,f],
					method: :delete,
					data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger" %>
				</p>
			</div>
		</div>
	</div>
	<% end %>
</div>
<!-- /.row -->
<div class = "row text-center" >
	<div class= "col-md-4 text-center">
		<h3> <span class="glyphicon glyphicon-envelope"></span> 
			TOTAL = <%= total %> pkr</h3> 
		</div>
	</div>
	<hr>

	<!-- Footer -->
	<footer>
