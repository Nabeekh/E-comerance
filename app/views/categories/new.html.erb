<div class=container>
	<div class=col-md-3></div>
	<div class= col-md-5>
	<h2>add new category</h2>
	<%= form_for :category, url: categories_path, html: { multipart: true } do |f| %>
		<div class = form-group>
			<label><%= f.label :name , class: "control-label" %><br></label>
			<%= f.text_field :name , class: "form-control" %>
		</div>
		<div class = form-group>
			<%= f.label :description, class: "control-label" %><br>
			<%= f.text_area :description, class: "control-label" , :rows => "6"%>
		</div>
		<%= f.file_field :avatar %>
		<%= f.submit "Save", :class => "btn btn-default" %>
		<% end %>
		<h3><%= link_to 'Back', categories_path ,:class => "btn btn-info"%></h3>
	</div>
</div>