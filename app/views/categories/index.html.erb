 <!-- Page Content -->
 <div class="container">

 	<!-- Jumbotron Header -->
 	<header class="jumbotron hero-spacer">
 		<h1>All categories</h1>
 		<p>Displaying all the categories to shop within</p>
 	</p>
 </header>

 <hr>

 <!-- Title -->
 <div class="row">
 	<div class="col-lg-12">
 		<h3>All categories</h3>
 	</div>
 </div>
 <!-- /.row -->
 <!-- Page Features -->
 <div class="row text-center">
 	<% @categories.each do |c| %>
 	<div class="col-md-3 col-sm-6 hero-feature">
 		<div class="thumbnail">
 			<%= image_tag c.avatar.url(:medium) %>
 			<div class="caption">
 				<h3> <%= c.name %></h3>
 				<p> <%= c.description %></p>
 				<p>
 					<%= link_to 'Explore' , category_path(c), :class => "btn btn-primary" %>
 				</p>
 			</div>
 		</div>
 	</div>
 	<% end %>

 </div>
