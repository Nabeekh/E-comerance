<div class=container>
	<div class=col-md-3></div>
	<div class= col-md-5>
	<h2>Add new Product to <%= @sub_category.name %> </h2>
		<%= form_for(@product, url: category_sub_category_products_path) do |f| %>
		<div class = form-group>
			<label><%= f.label :quantity , class: "control-label" %><br></label>
			<%= f.number_field :quantity , class: "form-control" %>
		</div>
		<div class = form-group>
			<%= f.label :name, class: "control-label" %><br>
			<%= f.text_field :name, class: "control-label" , :rows => "6"%>
		</div>
		<div class = form-group>
			<%= f.label :price, class: "control-label" %><br>
			<%= f.number_field:price, class: "control-label" , :rows => "6"%>
		</div>
		<div class = form-group>
			<%= f.label :QuantityDiscount, class: "control-label" %><br>
			<%= f.number_field :QDiscount, class: "control-label" , :rows => "6"%>
		</div>
		<%= f.file_field :avatar %>
		<%= f.submit "Save", :class => "btn btn-default" %>
		<% end %>
		<h3><%= link_to 'Back', categories_path ,:class => "btn btn-info"%></h3>
	</div>
</div>